@using Lab4.BL;
@using Lab4.DAL;
@model TicketAddVM;




<form asp-action="Add" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group m-4">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group m-4">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group m-4">
        <label asp-for="Severity"></label>
        <select asp-for="Severity" asp-items="Html.GetEnumSelectList<Severity>()"></select>
    </div>
    <div class="form-group m-4">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="ViewBag.Departments"></select>
    </div>
    <div class="form-group m-4">
        <label asp-for="DevelopersIds"></label>
        <select asp-for="DevelopersIds" asp-items="ViewBag.Developers"></select>
        <span asp-validation-for="DevelopersIds" class="text-danger"></span>
    </div>
    <div class="form-group m-4">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>






    <button class="btn btn-secondary"> Submit </button>

</form>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
